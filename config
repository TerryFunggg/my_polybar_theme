[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = " "
format = <label>
exec = ~/.config/polybar/polybar-script/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo ""
click-left = playerctl previous spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 1
click-left = playerctl play-pause spotify

[module/spotify-next]
type = custom/script
exec = echo ""
format = <label>
click-left = playerctl next spotify

[module/bsp-layout-status]
type = custom/script
exec = ~/.config/polybar/polybar-script/bsp-layout-status.sh
format = <label>
tail= true
interval = 1
format-margin=2

[module/space]
type = custom/text
content = "  "
